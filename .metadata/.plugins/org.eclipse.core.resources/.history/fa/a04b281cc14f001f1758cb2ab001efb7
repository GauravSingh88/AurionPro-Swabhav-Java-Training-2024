package com.aurionpro.day21.test;

import java.util.Iterator;
import java.util.List;

import com.aurionpro.day21.model.Builder;
import com.aurionpro.day21.model.Guitar;
import com.aurionpro.day21.model.Inventory;
import com.aurionpro.day21.model.Type;
import com.aurionpro.day21.model.Wood;

public class FindGuitarTester {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Inventory inventory = new Inventory();
		initializeInventory(inventory);
		Guitar whatErenLikes =new Guitar("",0,Builder.FENDER,"Stratocastor",Type.ELECTRIC,Wood.ALDER,Wood.ALDER);
		
		List matchingGuitars = inventory.search(whatErenLikes);
		if(!matchingGuitars.isEmpty()) {
			System.out.println("Eren you might like these guitars");
			for(Iterator i = matchingGuitars.iterator();i.hasNext();) {
				Guitar guitar= (Guitar)i.next();
				System.out.println("We have a " +
				guitar.getBuilder() + " " + guitar.getModel() + " " +
						guitar.getType() + " guitar:\n " +
				guitar.getBackWood() + " top.\n You can have it for only $" + guitar.getPrice() + " \n ----");
			}
		} else {
			System.out.println("Sorry , Eren, we have nothing for you.");
		}

	}

	private static void initializeInventory(Inventory inventory) {
		// add guitars to inventory
		 inventory.addGuitar("V95693", 1499.95, Builder.FENDER, "Stratocaster", Type.ELECTRIC, Wood.ALDER, Wood.ALDER);
	     inventory.addGuitar("V95123", 1549.95, Builder.FENDER, "Stratocaster", Type.ELECTRIC, Wood.ALDER, Wood.ALDER);
	     inventory.addGuitar("G12345", 599.95, Builder.GIBSON, "Les Paul", Type.ELECTRIC, Wood.MAPLE, Wood.MAHOGANY);
		
	}
	
	

}
