	public ICar makeCar(Enum string) {
		ICar car = null;
		
		if(string == CarBrand.Maruti)
			car = new Maruti();
		
		if(string == CarBrand.Mahindra)
			car = new Mahindra();
		
		if(string == CarBrand.Tata)
			car = new Tata();
		
		return car;
		
	}

}
